<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lfs"
            type="com.challenge.acronym.data.Lfs" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_5"
        android:layout_marginVertical="@dimen/padding_5"
        app:cardCornerRadius="@dimen/padding_5"
        app:cardElevation="@dimen/padding_5">

        <TextView
            android:id="@+id/textview_lfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="@{lfs.lf}"
            android:textSize="@dimen/item_text_size"
            tools:ignore="MissingConstraints" />

    </androidx.cardview.widget.CardView>
</layout>